@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    <noscript>
        <meta http-equiv="refresh" content="0;URL=@Url.Action("NoScript", "Error")" />
    </noscript>
    <div class="bs-container" style="min-height:960px;">
        <section class="content-header">
            <h1>
                Account
                <small>(Recovery)</small>
            </h1>

            <ol class="breadcrumb">
                <li><a href="#"> <i class="fa fa-dashboard"></i> Inicio </a></li>
                <li> <a href="#">Account</a></li>
                <li class="active">Recovery</li>
            </ol>
        </section>

        <br />
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h5 class="box-title">
                            <label class="text-success emailtitleletter">
                                <i class="text-success fa fa-graduation-cap"></i>
                                Recuperación de tu Cuenta
                            </label>&nbsp;

                        </h5>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <div class="form-group">
                                    Acabamos de enviar tu pasword de forma exitosa!,verfica por favor  tu correo electrónico.
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Ingresar" class="btn btn-success" id="btnEnviar" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}





